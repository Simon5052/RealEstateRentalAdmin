@model AddAgentModel
@{
    ViewData["Title"] = "Add";
}

<h3 class=" col-md-8 offset-md-2">Add Agent</h3>

<form method="post" id="form" asp-controller="Agent" asp-action="Add" enctype="multipart/form-data">
    <div class=" col-md-8 offset-md-2">
        <div class="row">
            <div class="col-6">
                <label class="form-label">First Name</label>
                <input class="form-control " id="FirstName" asp-for="FirstName">
            </div>
            <div class="col-6">
                <label class="form-label">Last Name</label>
                <input class="form-control " asp-for="LastName" id="LastName">

            </div>
        </div>
        <br />
        <div class="row">

            <div class="col-6">
                <label class="form-label">Company Name</label>
                <input class="form-control " asp-for="CompanyName" id="CompanyName">

            </div>
            <div class="col-6">
                <label class="form-label">Email</label>
                <input class="form-control " asp-for="Email" id="Email">

            </div>
        </div>
        <br />
        
        <div class="row">
            <div class="col-6">
                <label class="form-label">Phone Number</label>
                <input class="form-control" asp-for="PhoneNumber" id="PhoneNumber">

            </div>
            <div class="col-6">
                <label class="form-label">Agent Image</label>
                <input class="form-control" type="file" id="myFile" accept="image/png,image/jpeg" asp-for="Picture" />
                @*<input asp-for="Picture" class="form-control" required />*@

            </div>

        </div>
        <br />


        <div class="col-3">
            <label class="form-label"></label>
            <button class="btn btn-primary mb-2 form-control" type="submit">Add Agent</button>


        </div>


    </div>
</form>

